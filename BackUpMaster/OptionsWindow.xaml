<Window x:Class="BackUpMaster.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackUpMaster"
        mc:Ignorable="d"
        Title="OptionsWindow" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <CheckBox x:Name="RewriteCheckBox" Content="Delete all files in backup folder" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="272"/>
        <CheckBox x:Name="NewFolderCheckBox" Content="Save all files in one folder" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="207,239,0,0" VerticalAlignment="Top" Width="75" Click="CloseButton_Click"/>
        <TextBox x:Name="FolderNameTextBox" HorizontalAlignment="Left" Height="18" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" IsEnabled="False"/>

    </Grid>
</Window>
